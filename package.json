{
  "name": "qrshot",
  "version": "1.0.0",
  "description": "Data: 27/06/2024 | Desenvolvimento de uma home page para apresentar empresa, serviços de tecnologia da informação, desenvolvimento e infra.",
  "main": "index.js",
  "scripts": {
    "predev": "",
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "postdev": "npm run services:stop",
    "test": "npm run services:up && npm run services:wait:database && concurrently --names next,jest --hide next --kill-others --success command-jest \"next dev\"  \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:dev-start": "docker start postgres-dev-qrshot && next dev",
    "services:dev": "npm run services:up && next dev",
    "services:up": "docker compose --env-file .env.development -f infra/compose.yaml up -d",
    "services:stop": "docker compose --env-file .env.development -f infra/compose.yaml stop",
    "services:down": "docker compose --env-file .env.development -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-postgres",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "keywords": [],
  "author": "Josuel A. Lopes",
  "license": "MIT",
  "dependencies": {
    "@types/react-dom": "19.1.6",
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "lucide-react": "^0.479.0",
    "next": "15.2.1",
    "nextjs-routes": "^2.2.5",
    "node-pg-migrate": "7.7.1",
    "nookies": "2.5.2",
    "pg": "8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "commitizen": "4.3.1",
    "concurrently": "9.0.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.30.1",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-jest": "29.0.1",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.8",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
